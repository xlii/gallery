<p id="notice"><%= notice %></p>

<h1><%= @gallery.title %></h1>
<p>
  <b>Date:</b>
  <%= @gallery.date %>
</p>

<% @gallery.photos.each do |photo| %>
	<p>
		<%= link_to image_tag(photo.image.url(:medium)), gallery_photo_path(@gallery, photo) %><br>
		<%= photo.label %>
	</p>
<% end %>


<%= link_to 'Edit', edit_gallery_path(@gallery) %> |
<%= link_to 'Back', galleries_path %>
