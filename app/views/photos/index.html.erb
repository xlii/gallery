<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.label %></td>
    <td><%= link_to 'Show', [@gallery, photo] %></td>
    <td><%= link_to 'Edit', edit_gallery_photo_path(@gallery, photo) %></td>
    <td><%= link_to 'Destroy', [@gallery, photo], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

